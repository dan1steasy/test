<% form_tag :controller => 'notes', :action => 'create_contact_note' do %>
<table>
  <%= hidden_field :contact_note, :contact_id %>
  <%= hidden_field :contact_note, :created_by %>
  <tr>
    <td><%= text_area :contact_note, :decrypted_note, :rows => "5" %></td>
  </tr>
  <% if User.find(session[:user]).is_in_finance %>
    <tr>
      <td>Financial note? <%= check_box :contact_note, :is_financial %></td>
    </tr>
  <% end -%>
  <tr>
    <td><%= submit_tag "Add note" %></td>
  </tr>
</table>
<% end %>
