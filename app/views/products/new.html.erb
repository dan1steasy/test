<% @page_title = "New product" -%>

<!--[div:contentleft-->
<div id="contentleft">
  <h2>Add new product</h2>
  <% if @categories.size < 1 %>
  <p>No categories exist. You must <%= link_to 'add a category', :controller => 'categories', :action => 'new' %> before adding any products!</p>
  <% else %>
  <p>Use the form below to add a new product.</p>
  <%= start_form_tag :action => 'create' %>
  <table>
    <tr>
      <td><label for="product_category_id">Category</label></td>
      <td><%= collection_select :product, :category_id, @categories, :id, :name %></td>
    </tr>
    <%= render :partial => 'form' %>
    <tr>
      <td><%= submit_tag "Add product" %></td>
    </tr>
  </table>
  <%= end_form_tag %>
  <% end %>
</div>
