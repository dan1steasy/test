<% @page_title = "Datacentre Task" -%>

<!--[div:contentleft]-->
<div id="contentleft">
  <h2>Datacentre task details</h2>
  <%= edit_and_delete_options @task %>
  <p><%= @task.description %></p>
  <div class="audit">
    <p>Created by <%= @task.created_by_user %> on <%= @task.created_at.to_s(:db) %></p>
    <% if @task.updated_by != nil %>
      <p>Last updated by <%= @task.updated_by_user %> on <%= @task.updated_at.to_s(:db) %></p>
    <% end %>
    <% if @task.complete? -%>
      <p>Task was completed by <%= @task.completed_by_user %> on <%= @task.completed_at.to_s(:db) %></p>
    <% end -%>
  </div>
  <h2>Options</h2>
    <ul>
      <li><%= link_to "Edit", edit_task_path(@task) %> - edit this task</li>
      <li><%= link_to "Delete", @task, :method => :delete,
                      :confirm => "Are you sure you want to delete this task?" %></li>
      <li><%= link_to @task.complete_string(invert=true).capitalize,
                      task_path(:id => @task.id, :task => {:is_complete => !@task.complete?}),
                      :method => :put %> - mark this task as <%= @task.complete_string(invert=true) %></li>
    </ul>
</div>
